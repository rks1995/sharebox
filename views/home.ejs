<link rel="stylesheet" href="/css/home.css">

<h1>This page is render from home.ejs</h1>

<% if(locals.user) { %>
    <form action="/post/create-post" id="feed-posts" method="post">
        <h4>Posts</h4>
        <textarea name="content" cols="30" rows="3" placeholder="comments"></textarea>
        <input type="submit" value="post">
    </form>
    <% } %>
        <div class="post-list-container">
            <ul>
                <% for(post of posts) { %>
                    <li>
                        <h1>
                            <% if(locals.user && post.user.id==locals.user.id) { %>
                                <a href="/post/deletePost/<%= post._id %>">X</a>
                                <% } %>
                                    <%= post.content %>
                                        <small style="color: purple">
                                            <%= post.user.name %>
                                        </small>
                        </h1>
                        <% if(locals.user) {%>
                            <form action="/comments/create" method="post">
                                <input type="text" name="content" placeholder="comments...">
                                <input type="hidden" name="post" value="<%= post._id %>">
                                <input type="submit" value="comment">
                            </form>
                            <% } %>
                                <div class="comment-list">
                                    <ul>
                                        <% for(comment of post.comments) { %>
                                            <li>
                                                <h3>
                                                    <% if(locals.user && comment.user.id==locals.user.id) { %>
                                                        <a href="/comments/deleteComment/<%= comment._id %>">X</a>
                                                        <% } %>
                                                            <%= comment.content %>
                                                                <small style="color: red">
                                                                    <%= comment.user.name %>
                                                                </small>
                                                </h3>
                                            </li>
                                            <% } %>
                                    </ul>
                                </div>
                    </li>
                    <% } %>
            </ul>
        </div>