<link rel="stylesheet" href="/css/header.css">

<header id="header">
    <h2 id="logo">
        <a href="/">
            LOGO
        </a>
    </h2>
    <ul>
        <% if (locals.user) {%>
            <li>
                <a href="/user/profile/<%= user.id %>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/user/sign-out">Sign out</a>
            </li>
            <% } else { %>
                <li>
                    <a href="/user/signin">
                        Sign In
                    </a>
                </li>
                <li>
                    <a href="/user/signup">
                        Sign Up
                    </a>
                </li>
                <% } %>
    </ul>
</header>